@model Villa_Web.Models.Dto.VillaDTo

<form asp-action="DeleteVilla">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Rate" class="form-label"></label>
                <input asp-for="Rate" disabled class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Details" class="form-label"></label>
                <input asp-for="Details" disabled class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" disabled class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Occupancy" class="form-label"></label>
                <input asp-for="Occupancy" disabled class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Sqft" class="form-label"></label>
                <input asp-for="Sqft" disabled class="form-control" />
            </div>

            <div class="col-12">
                <label asp-for="Amenity" class="form-label"></label>
                <textarea asp-for="Amenity" disabled class="form-control"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVilla" asp-controller="Villa" class="btn-secondary btn form-control">Back To List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn-danger btn form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
